<Window x:Class="QuizApplication.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApplication"
        mc:Ignorable="d"
        Title="The .Net Quiz" Height="350" Width="525" WindowStyle="ThreeDBorderWindow" ResizeMode="CanMinimize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF568CF9" Offset="1"/>
            <GradientStop Color="#FF515BA2" Offset="0.13"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="button" Content="Return" HorizontalAlignment="Left" Margin="137,260,0,0" Width="256" Height="33" Background="{x:Null}" BorderBrush="#FF04000B" VerticalAlignment="Top" Click="button_Click"/>
        <Label x:Name="label" Content="Final score:" HorizontalAlignment="Left" Margin="104,27,0,0" VerticalAlignment="Top" FontFamily="Trajan Pro 3" FontSize="48" Foreground="Black"/>
        <Label x:Name="score" Content="0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="197,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.103,-0.112" Height="83" Width="141" FontSize="48"/>
    </Grid>
</Window>
